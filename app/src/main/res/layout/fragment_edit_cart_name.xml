<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".ui.cartName.EditCartNameFragment">

    <!-- Título -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/nombre_del_carrito"
        android:textSize="24sp"
        android:gravity="center_horizontal"
        android:layout_marginBottom="16dp" />

    <!-- Campo de Texto para Editar el Nombre del Carrito -->
    <EditText
        android:id="@+id/etCartName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="Ingrese el nuevo nombre"
        android:inputType="text" />

    <!-- Botón para Guardar el Nuevo Nombre -->
    <Button
        android:id="@+id/btnSaveCartName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/editar"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="24dp" />
</LinearLayout>
